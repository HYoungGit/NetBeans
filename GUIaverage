    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double mark1 = Double.parseDouble(textMark1.getText());
        double mark2 = Double.parseDouble(textMark2.getText());
        double mark3 = Double.parseDouble(textMark3.getText());
        double mark4 = Double.parseDouble(textMark4.getText());
        double average = (mark1 + mark2 + mark3 + mark4) /4;
        average = average * 100;
        average = Math.round(average);
        average = average / 100;
        LabelDisplay.setText("Your Average is... " + average + '!');
        
    }                                        

