    private void PurchaseButtonActionPerformed(java.awt.event.ActionEvent evt) {                                               
        double BInput = Double.parseDouble(BlueInput.getText());
        double RInput = Double.parseDouble(RedInput.getText());
        double GInput = Double.parseDouble(GreenInput.getText());
        double YsInput = Double.parseDouble(YellInput.getText());
        double YeInput = Double.parseDouble(YelsInput.getText());
        double Total = (YeInput + GInput + BInput + RInput + YsInput);
        double Tax = (Total * 1.13);
        Tax = Math.round(Tax);
        TotalLBL.setText("Your Total is: " + Tax +'$');
        TaxLBL.setText("Your Tax is: " + (Tax - Total) + '$');
    }                                              

